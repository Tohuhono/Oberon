{
  "name": "@oberon/nextjs-recipe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node ./scripts/prebuild.mjs",
    "build": "next build",
    "start": "next start",
    "deploy": "bash ./scripts/deploy.sh",
    "lint": "concurrently -n next,pretty,type \"npm:lint:next\" \"npm:lint:prettier\" \"npm:lint:types\"",
    "lint:fix": "concurrently -n next,pretty \"npm:lint:next -- --fix\" \"npm:lint:prettier -- -w\"",
    "lint:next": "next lint",
    "lint:types": "tsc -p tsconfig.json --pretty --noEmit",
    "lint:prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "postinstall": "patch-package && node ./scripts/postinstall.mjs",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest --ci",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:components": "npx playwright test --grep @component",
    "add": "npx shadcn-ui@latest add --",
    "db:migrations:create": "drizzle-kit generate:sqlite",
    "test-ct": "playwright test -c playwright-ct.config.ts"
  },
  "dependencies": {
    "@auth/core": "^0.28.0",
    "@auth/drizzle-adapter": "^0.3.17",
    "@measured/puck": "^0.13.1",
    "@hookform/resolvers": "^3.3.2",
    "@libsql/client": "^0.3.6",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@uploadthing/react": "^6.3.2",
    "class-variance-authority": "^0.7.0",
    "concurrently": "^8.2.1",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "filesize": "^10.1.0",
    "forcem-ipsum": "^3.0.0",
    "image-size": "^1.0.2",
    "next": "^14.1.2",
    "next-auth": "^5.0.0-beta.15",
    "patch-package": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "resend": "^3.2.0",
    "server-only": "^0.0.1",
    "styled-jsx": "^5.1.2",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "uploadthing": "^6.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.6.0",
    "@next/bundle-analyzer": "^14.0.2",
    "@playwright/experimental-ct-react": "^1.38.1",
    "@playwright/test": "^1.38.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^18.17.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.15",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.48.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.3.3",
    "vercel": "^32.5.3",
    "wrangler": "^3.8.0"
  }
