{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dotEnv": [".env.local", ".env"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": { "cache": false },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["wait:clean", "^wait"]
    },
    "jest": {},
    "lint": {},
    "tsc": { "dependsOn": ["^build"] },
    "wait": {
      "cache": false
    },
    "wait:clean": {
      "cache": false
    }
  }
}
