{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "globalDependencies": [
    "scripts/*",
    ".github/**",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml",
    "package.json",
    "tsconfig.json",
    ".env",
    ".env.local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["wait:clean", "^build", "prebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local", ".env"]
    },
    "check": {
      "dependsOn": ["lint", "tsc"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["wait:clean", "^wait", "prebuild"]
    },
    "generate:migrations": {
      "cache": false
    },
    "generate:recipes": {
      "cache": false
    },
    "prebuild": {
      "cache": false,
      "dependsOn": ["^wait"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {},
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "tsc": {
      "dependsOn": ["^build"]
    },
    "//#tsc:root": {},
    "wait": {
      "cache": false
    },
    "wait:clean": {
      "cache": false
    }
  }
}
