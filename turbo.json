{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dotEnv": [".env.local", ".env"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["lint:types", "lint:style", "lint:format"]
    },
    "lint:types": {
      "dependsOn": ["^build"]
    },
    "lint:style": {},
    "lint:format": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^wait"]
    },
    "wait": {
      "cache": false
    },
    "postinstall": {}
  }
}
