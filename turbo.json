{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "scripts/*",
    ".github/**",
    "package.json",
    "tsconfig.json"
  ],
  "globalDotEnv": [".env", ".env.local"],
  "pipeline": {
    "build": {
      "dotEnv": [".env.local", ".env"],
      "dependsOn": ["^build", "prebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": { "cache": false },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["wait:clean", "^wait", "prebuild"]
    },
    "prebuild": {
      "cache": false
    },
    "jest": {},
    "lint": {},
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "tsc": { "dependsOn": ["^build"] },
    "wait": {
      "cache": false
    },
    "wait:clean": {
      "cache": false
    }
  }
}
