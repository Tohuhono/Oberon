{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["lint:types", "lint:eslint"]
    },
    "lint:types": {
      "dependsOn": ["^build"]
    },
    "lint:eslint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^wait"]
    },
    "wait": {
      "cache": false
    },
    "postinstall": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
