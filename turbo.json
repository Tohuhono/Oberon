{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "globalEnv": ["CI"],
  "globalDependencies": [
    ".github/workflows/**",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml",
    "package.json",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["wait:clean", "^build", "prebuild"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check": {
      "dependsOn": ["lint", "tsc", "test:unit", "test:e2e"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["wait:clean", "^wait", "prebuild"]
    },
    "generate:migrations": {
      "cache": false
    },
    "generate:recipes": {
      "cache": false
    },
    "prebuild": {
      "cache": false,
      "dependsOn": ["^wait"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": [".playwright"]
    },
    "test:smoke": {
      "dependsOn": [],
      "outputs": [".playwright"],
      "env": ["PLAYWRIGHT_BASE_URL", "VERCEL_PROTECTION_BYPASS"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "tsc": {
      "dependsOn": ["^build"]
    },
    "//#tsc:root": {},
    "wait": {
      "cache": false
    },
    "wait:clean": {
      "cache": false
    }
  }
}
