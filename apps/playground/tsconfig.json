{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "@config/typescript",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["app", "oberon", ".next/types/**/*.ts"]
}
