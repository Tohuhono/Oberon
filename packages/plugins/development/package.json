{
  "name": "@oberoncms/plugin-development",
  "version": "0.5.0",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "A development plugin for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "react",
    "adapter",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon.git",
    "directory": "plugins/development"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "scripts",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "clean": "odt clean",
    "generate:migrations": "drizzle-kit generate:sqlite",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "tsc": "tsc --pretty",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@libsql/core": "^0.14.0",
    "@oberoncms/core": "workspace:*",
    "@oberoncms/sqlite": "workspace:*",
    "drizzle-orm": "^0.36.4",
    "next": "^15.0.3",
    "server-cli-only": "^0.3.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@auth/core": "^0.37.4",
    "@measured/puck": "^0.16.2",
    "@tohuhono/dev": "workspace:*",
    "@types/node": "22.9.3",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "drizzle-kit": "^0.28.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "5.7.2",
    "vite": "^5.4.11"
  }
}
