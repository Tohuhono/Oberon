{
  "name": "@oberoncms/plugin-turso",
  "version": "0.17.0",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "A Turso libsql database plugin for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "react",
    "adapter",
    "plugin",
    "turso"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon.git",
    "directory": "packages/plugins/turso"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "clean": "odt clean",
    "generate:migrations": "drizzle-kit generate:sqlite",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "tsc": "tsc --pretty",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@oberoncms/core": "workspace:*",
    "@oberoncms/sqlite": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "server-cli-only": "^0.3.2"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@auth/core": "^0.37.4",
    "@config/eslint": "workspace:*",
    "@config/scripts": "workspace:*",
    "@config/typescript": "workspace:*",
    "@config/vite": "workspace:*",
    "@puckeditor/core": "^0.21.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "drizzle-kit": "^0.31.9",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "5.9.3",
    "vite": "^7.3.1"
  }
}
