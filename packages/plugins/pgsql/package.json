{
  "name": "@oberoncms/plugin-pgsql",
  "version": "0.9.2",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "A PostgreSQL database plugin for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "react",
    "adapter",
    "plugin",
    "turso"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon",
    "directory": "packages/plugins/pgsql"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "scripts",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapter": {
      "types": "./dist/adapter.d.ts",
      "default": "./dist/adapter.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "clean": "odt clean",
    "generate:migrations": "drizzle-kit generate:pg",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "tsc": "tsc --pretty",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@oberoncms/core": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0",
    "server-cli-only": "^0.3.2"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@dev/eslint": "workspace:*",
    "@dev/scripts": "workspace:*",
    "@dev/typescript": "workspace:*",
    "@dev/vite": "workspace:*",
    "@dev/vitest": "workspace:*",
    "@types/node": "24.10.1",
    "@types/pg": "^8.16.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "drizzle-kit": "^0.31.9",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "5.9.3",
    "vite": "^7.3.1"
  }
}
