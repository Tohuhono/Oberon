  "license": "MIT",
  "description": "A PostgreSQL database plugin for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "react",
    "adapter",
    "plugin",
    "turso"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon.git",
    "directory": "plugins/pgsql"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "scripts",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
