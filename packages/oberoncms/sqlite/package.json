{
  "name": "@oberoncms/sqlite",
  "version": "0.3.0",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "A Sqlite libsql drizzle database adapter for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "drizzle",
    "react",
    "adapter",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon.git",
    "directory": "oberoncms/sqlite"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "scripts",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
  ],
  "exports": {
    "./adapter": "./dist/adapter.js",
    "./schema": "./dist/schema.js"
