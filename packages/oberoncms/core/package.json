{
  "name": "@oberoncms/core",
  "version": "0.17.2",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "OberonCMS is a cloud deployable CMS written in typescript based on the Puck visual editor",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "puck",
    "nextjs",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon",
    "directory": "packages/oberoncms/core"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "tailwind.css",
    "CHANGELOG*",
    "README*",
    "LICENSE*"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./auth": "./dist/auth.js",
    "./adapter": "./dist/adapter.js",
    "./render": "./dist/render.js",
    "./editor": "./dist/editor.js",
    "./provider": "./dist/provider.js",
    "./tailwind.css": "./tailwind.css"
  },
  "scripts": {
    "build": "vite build",
    "clean": "odt clean",
    "dev": "vite build --watch",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version",
    "lint": "eslint .",
    "test": "vitest run",
    "tsc": "tsc --pretty"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@hookform/resolvers": "^5.2.2",
    "@puckeditor/core": "^0.21.1",
    "@tohuhono/ui": "workspace:*",
    "@tohuhono/utils": "workspace:*",
    "dotenv": "^17.3.1",
    "filesize": "^11.0.13",
    "next": "^16.1.6",
    "next-auth": "5.0.0-beta.30",
    "react-hook-form": "^7.71.1",
    "swr": "^2.4.0",
    "use-debounce": "^10.1.0",
    "walkjs": "^6.0.1",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/scripts": "workspace:*",
    "@config/typescript": "workspace:*",
    "@config/vite": "workspace:*",
    "@config/vitest": "workspace:*",
    "@types/node": "24.10.1",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "5.9.3",
    "vite": "^7.3.1"
