    "removeGitignore": "mv templates/.gitignore templates/gitignore",
    "restoreGitignore": "mv templates/gitignore templates/.gitignore"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "glob": "^10.4.1",
    "handlebars": "^4.7.8",
