  "type": "module",
  "bin": {
    "create-oberon-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "plugins"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "node ../../scripts/clean-package.mjs",
    "dev": "vite build --watch",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version",
