  },
  "devDependencies": {
    "@tohuhono/dev": "workspace:*",
    "@types/ignore-walk": "^4.0.3",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.27",
    "ignore-walk": "^6.0.5",
    "typescript": "5.4.2",
    "vite": "^5.1.6"
  }
