{
  "name": "@oberoncms/adapter-turso",
  "version": "0.4.0",
  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "A Turso libsql database adapter for OberonCMS",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "nextjs",
    "react",
    "adapter",
    "turso"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tohuhono/Oberon.git",
    "directory": "oberoncms/adapter-turso"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./router": "./dist/router.js"
  },
  "bin": {
    "odt-init": "./scripts/initialise.mjs",
    "odt-prepare": "./scripts/prepare.mjs"
  },
  "scripts": {
    "build": "vite build",
    "clean": "pnpx odt-clean",
    "db:migrations:create": "drizzle-kit generate:sqlite",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "tsc": "tsc --pretty",
    "wait": "wait-on ./dist/version && echo done",
    "wait:clean": "rimraf ./dist/version"
  },
  "dependencies": {
    "@libsql/client": "^0.5.6",
    "@libsql/core": "^0.5.6",
    "@oberoncms/auth": "workspace:*",
    "@oberoncms/core": "workspace:*",
    "drizzle-orm": "^0.30.1",
    "next": "^14.2.1",
    "use-server": "^0.4.9"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@auth/core": "^0.29.0",
    "@measured/puck": "^0.14.1",
    "@tohuhono/dev": "workspace:*",
    "@types/node": "20.11.26",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "drizzle-kit": "^0.20.14",
    "typescript": "5.4.2",
    "vite": "^5.1.6"
  }
}
