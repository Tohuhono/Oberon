  "author": "Tohuhono ltd",
  "license": "MIT",
  "description": "OberonCMS is a cloud deployable CMS written in typescript based on the Puck visual editor",
  "keywords": [
    "oberon",
    "oberoncms",
    "cms",
    "puck",
    "nextjs",
    "react"
  ],
  "repository": {
    "type": "git",
