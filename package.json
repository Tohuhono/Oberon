{
  "name": "oberon",
  "private": true,
  "scripts": {
    "deploy": "bash ./scripts/deploy.sh",
    "build": "turbo build",
    "clean": "turbo clean --continue",
    "clean:node": "turbo clean --continue -- --node_modules && rimraf ./dist ./turbo ./node_modules",
    "tsc": "turbo tsc",
    "dev": "turbo dev",
    "format": "prettier -l --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "turbo lint --filter='!@tohuhono/puck-upload-thing' --filter='!@oberon/nextjs-recipe' --filter='!tohuhono'",
    "lint:fix": "turbo lint:style -- --fix",
    "jest": "turbo jest"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@oberon/dev": "*",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "rimraf": "^5.0.5",
    "turbo": "latest",
    "typescript": "5.4.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "puck/*",
    "recipes/*"
  ]
}
