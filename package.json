{
  "name": "oberon",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "postinstall": "turbo postinstall",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:style -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "clean": "rimraf --glob ./apps/*/dist ./packages/*/dist ./recipes/*/dist ./dist"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@oberon/dev": "*",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "turbo": "latest",
    "typescript": "^5.4.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "recipes/*"
  ]
}
