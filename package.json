{
  "name": "oberon",
  "private": true,
  "scripts": {
    "deploy": "bash ./scripts/deploy.sh",
    "build": "turbo build",
    "change": "changeset",
    "clean": "turbo clean --continue && rimraf ./dist ./.turbo",
    "clean:node": "turbo clean --continue -- --node_modules && npx odt-clean --node_modules",
    "tsc": "turbo tsc",
    "dev": "turbo dev --concurrency 20",
    "prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "prettier:fix": "prettier -l --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "release": "turbo build && changeset publish",
    "jest": "turbo jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,md,json}": "prettier -l --write"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@oberon/dev": "*",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "rimraf": "^5.0.5",
    "turbo": "latest",
    "typescript": "5.4.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "apps/*",
    "oberoncms/*",
    "packages/*",
    "puyk/*",
    "recipes/*"
  ]
}
