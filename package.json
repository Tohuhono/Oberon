{
  "name": "oberon",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean --continue || rimraf ./*/*/node_modules && rimraf ./dist ./turbo ./node_modules ",
    "dev": "turbowatch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:style -- --fix",
    "postinstall": "turbo postinstall"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@oberon/dev": "*",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "rimraf": "^5.0.5",
    "turbo": "latest",
    "turbowatch": "^2.29.4",
    "typescript": "5.3.3",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "recipes/*"
  ],
  "pnpm": {
    "patchedDependencies": {
      "turbowatch@2.29.4": "patches/turbowatch@2.29.4.patch"
    }
  }
}
